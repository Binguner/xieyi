<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent"
    android:layout_marginTop="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/floater_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:text="这是标题这是标题这是标题"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/floater_from"
            android:text="来自:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/floater_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/floater_from_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桃花岛"
            app:layout_constraintTop_toTopOf="@id/floater_from"
            app:layout_constraintStart_toEndOf="@id/floater_from"
            android:layout_marginStart="@dimen/dp_4"
            />
        
        <TextView
            android:id="@+id/floater_date"
            android:text="2013 年 3 月 3 日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/floater_from"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_10"
            />

        <TextView
            android:text="签署时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/floater_from"
            app:layout_constraintEnd_toStartOf="@id/floater_date"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
