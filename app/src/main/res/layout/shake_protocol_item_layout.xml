<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shake_avator"
            android:src="@color/colorAccent"
            android:layout_width="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/shake_avator_name"
            android:text="B"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/shake_avator"
            app:layout_constraintBottom_toBottomOf="@id/shake_avator"
            app:layout_constraintStart_toStartOf="@id/shake_avator"
            app:layout_constraintEnd_toEndOf="@id/shake_avator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shake_username"
            android:text="binguenr"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@id/shake_avator"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shake_date"
            android:textSize="10sp"
            android:text="9 月 9 日 9:09"
            app:layout_constraintTop_toBottomOf="@id/shake_username"
            app:layout_constraintStart_toEndOf="@id/shake_avator"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shake_content"
            android:text="It's protocol content.It's protocol content.It's protocol content.It's protocol content.It's protocol content.It's protocol content."
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/shake_avator"
            app:layout_constraintStart_toStartOf="@id/shake_avator"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dp_4"
            app:layout_goneMarginEnd="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="false"
            android:ellipsize="end"
            android:maxLines="5"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/shadow_comment"
            android:src="@drawable/ic_insert_comment_grey_500_24dp"
            app:layout_constraintTop_toBottomOf="@id/shake_content"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/shake_favorite"
            android:src="@drawable/ic_favorite_grey_500_24dp"
            app:layout_constraintTop_toBottomOf="@id/shake_content"
            app:layout_constraintEnd_toStartOf="@id/shadow_comment"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>
